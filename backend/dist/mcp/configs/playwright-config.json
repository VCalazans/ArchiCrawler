{
  "browser": "chromium",
  "headless": false,
  "args": ["--no-sandbox", "--disable-dev-shm-usage"],
  "viewport": {
    "width": 1280,
    "height": 720
  },
  "permissions": {
    "allowedDomains": ["*"],
    "allowFileUploads": true,
    "allowDownloads": true,
    "maxFileSize": "10MB"
  },
  "timeouts": {
    "navigation": 30000,
    "action": 5000,
    "screenshot": 10000
  },
  "features": {
    "screenshots": true,
    "pdf": true,
    "networkRequests": true,
    "consoleMessages": true,
    "tabs": true,
    "vision": true
  },
  "security": {
    "allowJavaScript": true,
    "allowPopups": false,
    "allowGeolocation": false
  },
  "launchOptions": {
    "headless": false,
    "devtools": false,
    "slowMo": 100
  }
} 